# Database
DATABASE_URL="postgresql://user:password@localhost:5432/aam_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO / S3
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY_ID="minioadmin"
S3_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET_NAME="aam-uploads"
S3_REGION="us-east-1"
S3_USE_SSL="false"

# Deepgram API
DEEPGRAM_API_KEY="your_deepgram_api_key_here"

# OpenAI API
OPENAI_API_KEY="your_openai_api_key_here"

# Next.js
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Auth Module
AUTH_JWT_SECRET="your_jwt_secret_here"
AUTH_SESSION_MAX_AGE="86400"
AUTH_COOKIE_NAME="aam_session"
AUTH_COOKIE_SECURE="false"
AUTH_COOKIE_SAME_SITE="strict"
AUTH_COOKIE_PATH="/"
AUTH_PASSWORD_MIN_LENGTH="8"
AUTH_PASSWORD_REQUIRE_UPPERCASE="true"
AUTH_PASSWORD_REQUIRE_LOWERCASE="true"
AUTH_PASSWORD_REQUIRE_NUMBERS="true"
AUTH_PASSWORD_REQUIRE_SPECIAL="false"
AUTH_BCRYPT_ROUNDS="10"
AUTH_EMAIL_MAX_LENGTH="255"

# App
NODE_ENV="development"
APP_URL="http://localhost:3000"

